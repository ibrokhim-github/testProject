                <TextBlock x:Name="block" HorizontalAlignment="Left" Margin="735,231,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
                <Button Content="" HorizontalAlignment="Left" Height="68" Margin="1338,54,0,0" VerticalAlignment="Top" Width="67" Click="Button_Click" Cursor="Hand">
                    <Button.Background>
                        <ImageBrush ImageSource="/img_82026.png"/>
                    </Button.Background>
                </Button>
            </Grid>
