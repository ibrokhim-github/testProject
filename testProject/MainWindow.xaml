<Window x:Class="testProject.MainWindow"
      
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testProject"
        mc:Ignorable="d"
           xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainMenu" Height="800" Width="1546">
    <TabControl SelectionChanged="TabControl_SelectionChanged" Margin="0,0,10,0">
        <TabItem x:Name="tab_mainDishes" Header="Main dishes"  FontSize="20" FontWeight="Bold" Width="195" Height="52"  >
            <TabItem.Effect>
                <DropShadowEffect  Color="LightGray"/>
            </TabItem.Effect>
            <Grid Margin="0,10,0,12" Width="1528">
                <Image HorizontalAlignment="Left" Height="376" Margin="10,260,0,0" VerticalAlignment="Top" Width="203" Source="/bord.jpg" Stretch="UniformToFill"/>
                <Image HorizontalAlignment="Left" Height="380" Margin="12,16,0,0" VerticalAlignment="Top" Width="203" Source="/bord.jpg" Stretch="UniformToFill" StretchDirection="Both" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="180.054"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image HorizontalAlignment="Left" Height="376" Margin="1280,262,0,0" VerticalAlignment="Top" Width="202" Source="/bord.jpg" Stretch="UniformToFill"/>
                <Image HorizontalAlignment="Left" Height="380" Margin="1280,18,0,0" VerticalAlignment="Top" Width="203" Source="/bord.jpg" Stretch="UniformToFill" StretchDirection="Both" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="180.054"/>
                            <TranslateTransform/>
                        </TransformGroup>
