            <TabItem.Effect>
                <DropShadowEffect Color="LightGray"/>
            </TabItem.Effect>
            <Grid Background="#FFE5E5E5" Margin="0,21,0,46" Width="1460">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="textB" HorizontalAlignment="Left" Margin="215,251,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="51" Width="57" FontSize="36"/>
                <Button x:Name="vikka" Content="" HorizontalAlignment="Left" Height="38" Margin="272,276,0,0" VerticalAlignment="Top" Width="38" Click="Button_Click_1" FontSize="36">
                    <Button.Background>
                        <ImageBrush ImageSource="/icon-plus-25.jpg"/>
                    </Button.Background>
                </Button>
                <materialDesign:Badged Content="Badged" Height="99" Margin="868,132,0,0" Width="144"/>
                <materialDesign:Card Content="" HorizontalAlignment="Left" Height="219" Margin="61,24,0,0" VerticalAlignment="Top" Width="211">
                    <materialDesign:Card.Background>
                        <ImageBrush ImageSource="/somsa.jpg"/>
                    </materialDesign:Card.Background>
                </materialDesign:Card>
                <materialDesign:Chip Content="Chip" Height="36" Margin="956,308,0,0" VerticalAlignment="Top" Width="108" Click="Chip_Click"/>
