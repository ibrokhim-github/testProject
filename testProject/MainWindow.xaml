                </Image>
                <Button Content="" HorizontalAlignment="Left" Height="78" Margin="1196,39,0,0" VerticalAlignment="Top" Width="72" Click="Button_Click" Cursor="Hand">
                    <Button.Background>
                        <ImageBrush ImageSource="/img_82026.png"/>
                    </Button.Background>
                </Button>
                <materialDesign:Card Content="" HorizontalAlignment="Left" Height="149" Margin="364,85,0,0" VerticalAlignment="Top" Width="147">
                    <materialDesign:Card.Background>
                        <ImageBrush ImageSource="/somsa.jpg"/>
                    </materialDesign:Card.Background>
                </materialDesign:Card>
                <Button Content="Button" HorizontalAlignment="Left" Height="32" Margin="364,275,0,0" VerticalAlignment="Top" Width="74" RenderTransformOrigin="0.528,0.623"/>
                <Button Content="Button" Height="30" Margin="466,275,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.501,0.541" HorizontalAlignment="Left" Width="71" Click="Button_Click_2"/>
                <TextBlock HorizontalAlignment="Left" Margin="1108,547,0,0" TextWrapping="Wrap" Text="000" VerticalAlignment="Top"/>
