        <TabItem x:Name="tab_dessert" Header="Desserts" Height="50" Width="120" FontSize="20" FontWeight="Bold" Margin="0,-1,0,1">
            <TabItem.Effect>
                <DropShadowEffect Color="LightGray"/>
            </TabItem.Effect>
            <Grid Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Left" Margin="248,107,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="74" Width="247"/>
            </Grid>
        </TabItem>
        <TabItem x:Name="tab_Drinks" Header="Drinks" Height="50" Width="120" FontSize="20" FontWeight="Bold" Margin="0,-1,0,1">
            <TabItem.Effect>
                <DropShadowEffect Color="LightGray" BlurRadius="500
                                  "/>
            </TabItem.Effect>
            <Grid Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Left" Margin="660,105,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="74" Width="247"/>
            </Grid>
        </TabItem>

    </TabControl>
</Window>
